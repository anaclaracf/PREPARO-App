                            android:fontFamily="sans-serif"
                            android:paddingLeft="25dp"
                            android:paddingRight="15dp"
                            android:textColor="@color/colorPrimary"
                            android:textSize="15sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
