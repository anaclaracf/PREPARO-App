<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".Perfil">

    <ImageView
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="470dp"
        android:background="?selectableItemBackgroundBorderless"
        android:elevation="1dp"
        android:src="@drawable/paul"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:orientation="vertical">
        <androidx.cardview.widget.CardView
            android:layout_width="364dp"
            android:layout_height="545dp"
            android:layout_marginTop="85dp"
            android:layout_gravity="center_horizontal"
            app:cardCornerRadius="15dp" >

            <TextView
                android:id="@+id/nomeUser"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="95dp"
                android:text=""

                android:textStyle="bold"
                android:textSize="25sp"
                android:textColor="@color/colorPrimary"
                android:layout_gravity="center_horizontal"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cientista de Dados"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="135dp"
                android:textSize="17sp"
                android:textColor="@color/colorPrimary"/>
            <View
                android:layout_width="wrap_content"
                android:layout_height="1dp"
                android:layout_marginTop="185dp"
                android:background="@color/colorAccent2"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="190dp"
                android:layout_marginLeft="33dp"
                android:textColor="@color/colorPrimary"
                android:background="#FFFFFF"
                android:text="   Formação Acadêmica"
                android:textAllCaps="false"
                android:paddingRight="10dp"
                android:textSize="20dp"
                android:textStyle="bold"
                android:drawableStart="@drawable/ic_mortarboard"
                style="?android:attr/borderlessButtonStyle"
                android:gravity="center_vertical"
                android:paddingLeft="10dp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="265dp"
                android:textColor="@color/colorPrimary"
                android:background="#FFFFFF"
                android:text="Graduação"
                android:paddingRight="10dp"
                android:textAllCaps="false"
                android:textSize="17dp"
                android:id="@+id/processoGrad"
                style="?android:attr/borderlessButtonStyle"
                android:gravity="center_vertical"
                android:textStyle="bold"
                android:paddingLeft="10dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="33dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="308dp"
                android:textColor="@color/colorPrimary"
                android:background="#FFFFFF"
                android:text="Insper"
                android:paddingRight="10dp"
                android:textAllCaps="false"
                android:textSize="13dp"
                android:id="@+id/li_instituicao"
                style="?android:attr/borderlessButtonStyle"
                android:gravity="center_vertical"
                android:paddingLeft="10dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="33dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="338dp"
                android:textColor="@color/colorPrimary"
                android:background="#FFFFFF"
                android:text="Engenharia da computação"
                android:paddingRight="10dp"
                android:textAllCaps="false"
                android:textSize="13dp"
                android:id="@+id/le_curso"
                style="?android:attr/borderlessButtonStyle"
                android:gravity="center_vertical"
                android:paddingLeft="10dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="33dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="365dp"
                android:textColor="@color/colorPrimary"
                android:background="#FFFFFF"
                android:text="Cursando, 8˚Semestre"
                android:paddingRight="10dp"
                android:textAllCaps="false"
                android:textSize="12dp"
                android:id="@+id/Situation"
                style="?android:attr/borderlessButtonStyle"
                android:gravity="center_vertical"
                android:paddingLeft="10dp"/>



        </androidx.cardview.widget.CardView>
    </LinearLayout>


</RelativeLayout>




